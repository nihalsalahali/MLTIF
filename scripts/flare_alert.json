{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FLARE Alert Message Schema",
  "description": "Schema for alerts generated by P4-SFFP and classified by AFAC",
  "type": "object",
  "properties": {
    "alert_id": {
      "type": "string",
      "description": "Unique alert UUID"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Time when the alert was generated"
    },
    "source_ip": {
      "type": "string",
      "format": "ipv4",
      "description": "Source IP address of flagged traffic"
    },
    "destination_ip": {
      "type": "string",
      "format": "ipv4",
      "description": "Destination IP address of flagged traffic"
    },
    "protocol": {
      "type": "string",
      "enum": ["TCP", "UDP", "ICMP"],
      "description": "Transport layer protocol"
    },
    "flags": {
      "type": "object",
      "properties": {
        "RST": { "type": "boolean" },
        "FIN": { "type": "boolean" },
        "SYN": { "type": "boolean" },
        "FRAG": { "type": "boolean" }
      },
      "required": ["RST", "FIN", "SYN", "FRAG"]
    },
    "classifier_confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "AFAC ensemble model confidence"
    },
    "recommended_action": {
      "type": "string",
      "enum": ["RATE_LIMIT", "DROP_FRAGMENT", "STATE_FLUSH", "NO_ACTION"],
      "description": "Action recommended by MLDFM policy engine"
    }
  },
  "required": [
    "alert_id",
    "timestamp",
    "source_ip",
    "destination_ip",
    "protocol",
    "flags",
    "classifier_confidence",
    "recommended_action"
  ]
}
